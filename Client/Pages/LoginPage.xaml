<Page x:Class="Client.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <Grid Background="#FFFFB1F7">

        <StackPanel Background="AliceBlue" Margin="30" Width="400" Height="300">
            <TextBlock Text="Login" FontSize="32" Margin="10" />

            <TextBlock Text="email: " Margin="10 0"/>
            <TextBox x:Name="emailTextBox" Margin="10 0"/>

            <TextBlock Text="password: " Margin="10 0"/>
            <PasswordBox x:Name="passwordPasswordBox" Margin="10 0"/>

            <Button x:Name="loginButton" Content="Log in" Click="loginButton_Click" Margin="10"/>
            <Button x:Name="signupButton" Content="Sign up" Click="signupButton_Click" Margin="10 0"/>
            <Button x:Name="backButton" Content="Back" Margin="10" Click="backButton_Click"/>
        </StackPanel>
        
        
    </Grid>
</Page>
