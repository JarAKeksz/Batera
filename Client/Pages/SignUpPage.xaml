<Page x:Class="Client.Pages.SignUpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Client.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SignUpPage">

    <Grid Background="#FFFFB1F7">

        <StackPanel Background="AliceBlue" Margin="30">
            <TextBlock Text="Login" FontSize="32"/>
            
            <TextBlock Text="email: "/>
            <TextBox x:Name="emailTextBox"/>

            <TextBlock Text="password: "/>
            <TextBox x:Name="passwordTextBox"/>
            
            <TextBlock Text="password again: "/>
            <TextBox x:Name="passwordAgainTextBox"/>

            <TextBlock Text="Name: "/>
            <TextBox x:Name="NameTextBox"/>

            <Button x:Name="loginButton" Content="Log in" Click="loginButton_Click"/>
            <Button x:Name="signupButton" Content="Sign up" Click="signupButton_Click"/>
        </StackPanel>


    </Grid>
</Page>
